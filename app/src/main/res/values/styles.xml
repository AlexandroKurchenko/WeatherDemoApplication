<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlackTextColor">
        <item name="android:textColor">@android:color/background_dark</item>
    </style>

    <style name="GreyTextColor">
        <item name="android:textColor">@color/greyTextColor</item>
    </style>

    <style name="LabelText" parent="GreyTextColor">
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="SubtitleLabelText" parent="BlackTextColor">
        <item name="android:textSize">@dimen/subtitle_label_text_size</item>
    </style>

    <style name="TitleLabelText" parent="BlackTextColor">
        <item name="android:textSize">@dimen/title_label_text_size</item>
    </style>

</resources>
